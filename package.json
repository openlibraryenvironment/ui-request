{
  "name": "@folio/request",
  "version": "1.0.0",
  "description": "Request resources for ILL",
  "license": "Apache-2.0",
  "dependencies": {
    "@folio/rs": "^1.1.0"
  },
  "stripes": {
    "actsAs": ["app"],
    "displayName": "ui-request.meta.title",
    "route": "/request",
    "home": "/request/requests?sort=-dateCreated",
    "queryResource": "query",
    "icons": [
      {
        "name": "app",
        "alt": "Request items via ILL",
        "title": "Request"
      }
    ],
    "stripesDeps": [
      "@folio/rs",
      "@folio/stripes-erm-components",
      "@folio/stripes-reshare"
    ],
    "permissionSets": [
      {
        "permissionName": "module.request.enabled",
        "displayName": "UI: request module is enabled",
        "subPermissions": [
          "ui-request.view"
        ],
        "visible": true
      },
      {
        "permissionName": "settings.request.enabled",
        "displayName": "Settings (request): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-request.view",
        "displayName": "Request: View requests",
        "subPermissions": [
          "rs.patronrequests.read",
          "rs.refdata.get",
          "configuration.entries.collection.get",
          "tags.collection.get"
        ],
        "visible": "false"
      },
      {
        "permissionName": "ui-request.create",
        "displayName": "Request: Create requests",
        "subPermissions": [
          "rs.patronrequests.item.post"
        ],
        "visible": "true"
      },
      {
        "permissionName": "ui-request.edit",
        "displayName": "Request: Edit requests",
        "subPermissions": [
          "rs.patronrequests.item.put"
        ],
        "visible": "true"
      }
    ]
  }
}
